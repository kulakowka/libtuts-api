{
  "apps": [
    {
      "name"      : "API",
      "script"    : "bin/www",
      "node_args" : "--harmony",
      "instances" : 2,
      "autorestart": true,
      "watch": true,
      "ignore_watch": [
        "node_modules", 
        "jobs",
        ".git"
      ],
      "env": {
        "MONGO_URL": "mongodb://localhost/libtuts_prototype_api_v1",
        "PORT": 3001
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    },
    {
      "name"      : "JOBS",
      "script"    : "jobs/run.js",
      "node_args" : "--harmony",
      "autorestart": true,
      "watch": false,
      "env": {
        "MONGO_URL": "mongodb://localhost/libtuts_prototype_api_v1",
        "DEBUG": "app:jobs"
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy" : {
    "production" : {
      "user" : "node",
      "host" : "212.83.163.1",
      "ref"  : "origin/master",
      "repo" : "git@bitbucket.org:Kulakowka/libtuts-api.git",
      "path" : "/var/www/production",
      "post-deploy" : "npm install ; pm2 startOrRestart --env production"
    }
  }
}
